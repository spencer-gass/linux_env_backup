// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+alt+n",
        "command": "workbench.action.files.newUntitledFile"
    },
    {
        "key": "ctrl+n",
        "command": "-workbench.action.files.newUntitledFile"
    },
    {
        "key": "ctrl+n",
        "command": "actions.find"
    },
    {
        "key": "ctrl+f",
        "command": "runCommands",
        "args": {
          "commands": [
            "editor.action.addSelectionToNextFindMatch",
            "actions.find"
          ]
        },
        "when": "editorTextFocus"
      },
